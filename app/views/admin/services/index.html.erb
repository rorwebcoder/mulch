 
<%= render :partial => "/common/admin/title_bar.html" , :locals => {:titles => "Services"} %>
		
<div id="active_admin_content" class="without_sidebar">
<div class="columns">
              <div class="column" style="width: 100.0%;">
                <div class="panel">
														<h3>Service List<span style="float:right"><%= link_to "Add Service", new_admin_service_path %></span></h3>
                  <div class="panel_contents">
                    <div>
																				<div>
																				<%= form_tag('/admin/services', :method => 'get') do -%>
																		
																						<div>
																								Category<br />
																								<%= select_tag "category", options_from_collection_for_select(@categories, "id", "name", params[:category]), :prompt => "Select Category" %>
																						</div>  
																						<div>
																								SubCategory<br />
																								<%= select_tag "sub_category", options_from_collection_for_select(@sub_categories, "id", "name", params[:sub_category]), :prompt => "Select SubCategory" %>
																						</div>  	
																						<div>
																								InnerCategory<br />
																								<%= select_tag "service_inner_category_id", options_from_collection_for_select(@inner_categories, "id", "name", params[:service_inner_category_id]), :prompt => 'Select InnerCategory' %>
																						</div>  
																						<div><%= submit_tag 'Filter' %></div>
																				<% end -%>
																				</div>
																				<% if @services.blank? %>
																						<table style="width:100%" class="reference">
																									<tbody>
																											<tr>
																											<td>No service added yet.</td>
																											</tr>
																											<tr>
																											<td><%= link_to "Add Service", new_admin_service_path %></td>
																											</tr>
																										</tbody>
																						</table>
																				<% else %>
																				<table style="width:100%" class="reference">
																									<tbody>
																									<tr>
																										<th>Title</th>
																										<th>User</th>
																										<th>Short Description</th>		
																										<th>Response Time</th>
																										<th>Deliverable Days</th>
																										<th>Published</th>
																										<th>Service Image</th>
																										<th>Category</th>
																										<th>Actions</th>
																									</tr>
																									<% @services.each do |service| %>
																										<tr id="service_<%= service.id %>">
																												<%= render :partial => "service_view", :locals => {:service => service} %>
																										</tr>
																									<%end%>
																								</tbody>
																						</table>
																				<% end %>
 
</div>
                    <div>
                  

</div>
                  </div>
                </div>
              </div>
										<div style="clear:both;"></div></div>
										
		</div>
		
		
<script type="text/javascript">
		var populateCategoryUrl = "<%= populate_category_admin_services_path %>";
		var publishedStatusUpdUrl = "<%= update_published_status_admin_services_path %>";
</script>