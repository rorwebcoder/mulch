<% if params[:step] == "1" %>
		$('#step1_form').html("<%= escape_javascript(render :partial => "step1_form") %>")
		<% if @save %>
				selectTab(2);
				hideAllForm();
				showForm(2);
				$('#step2_form').html("<%= escape_javascript(render :partial => "step2_form") %>")
				initializeClickEvents();
		<% else %>
				initializeChangeEvent();
		<% end %>
<% end %>

